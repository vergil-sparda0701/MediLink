<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/design_default_color_on_primary">

    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView6"
        android:nextFocusDown="@+id/txtClave"/>

    <EditText
        android:id="@+id/txtCondicion"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Condicion medica?"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        android:nextFocusDown="@+id/txtUsuario"/>

    <EditText
        android:id="@+id/txtContactCelular"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Celular"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtContactName"
        android:nextFocusDown="@+id/cboSangre"/>

    <EditText
        android:id="@+id/txtContactCedula"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Cedula"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtContactName"
        android:nextFocusDown="@+id/txtContactCelular"/>

    <EditText
        android:id="@+id/txtContactName"
        android:layout_width="409dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Nombre completo"
        android:inputType="textUri"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        android:nextFocusDown="@+id/txtContactCedula"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos personales"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="65dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/txtApellido"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:nextFocusDown="@+id/txtApellido"/>

    <EditText
        android:id="@+id/txtApellido"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Apellido"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:nextFocusDown="@+id/txtFecha"
        />

    <EditText
        android:id="@+id/txtFecha"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="65dp"
        android:ems="10"
        android:hint="Fecha de nacimiento"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/cboSexo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombre" />

    <Spinner
        android:id="@+id/cboSexo"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:spinnerMode="dropdown"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombre"
        android:nextFocusDown="@+id/cboSexo"/>

    <EditText
        android:id="@+id/txtCedula"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Cedula"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cboSexo"
        android:nextFocusDown="@+id/cboEstadoCivil"/>

    <Spinner
        android:id="@+id/cboEstadoCivil"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:spinnerMode="dropdown"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txtCedula"
        app:layout_constraintTop_toBottomOf="@+id/cboSexo"
        android:nextFocusDown="@+id/txtCelular"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Datos de contacto"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cboEstadoCivil" />

    <EditText
        android:id="@+id/txtCelular"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Celular"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/txtTelefono"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:nextFocusDown="@+id/txtTelefono"/>

    <EditText
        android:id="@+id/txtTelefono"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Telefono"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:nextFocusDown="@+id/txtCorreo"/>

    <EditText
        android:id="@+id/txtCorreo"
        android:layout_width="409dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Correo electronico"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTelefono"
        android:nextFocusDown="@+id/txtDireccion"/>

    <EditText
        android:id="@+id/txtDireccion"
        android:layout_width="409dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Direccion"
        android:inputType="textUri"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtCorreo"
        android:nextFocusDown="@+id/txtContactName"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Contacto adicional"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDireccion" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Datos medicos"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtContactCelular" />

    <Spinner
        android:id="@+id/cboSangre"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_editor_absoluteX="1dp"
        android:nextFocusDown="@+id/txtCondicion"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Datos del sistema"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCondicion" />

    <EditText
        android:id="@+id/txtClave"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:imeOptions="actionDone"/>


</androidx.constraintlayout.widget.ConstraintLayout>